APP_NAME=Rawej
APP_ENV=production

NEXT_PUBLIC_APP_NAME=${APP_NAME}
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_APP_URL}/api/v1
NEXT_PUBLIC_FALLBACK_LANGUAGE=en

# Suppress baseline-browser-mapping old data warning
BROWSERSLIST_IGNORE_OLD_DATA=true

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
# Google Search Console
NEXT_PUBLIC_GSC_VERIFICATION_CODE=your-verification-code-here

REMOTE_API_URL=https://api.example.com/v1
REMOTE_API_USER=apiuser
REMOTE_API_PASSWORD=apipassword

REVALIDATE_SECRET=supersecret

# Logger configuration
LOG_LEVEL=error
LOG_TO_FILE=false
LOG_FILE_PATH=./storage/logs/app.log

# Token storage configuration
TOKEN_FILE_PATH=./storage/tokens/auth.json

# Cache Configuration (in seconds)
# ISR_REVALIDATE: How often to regenerate pages in background (default: 60)
ISR_REVALIDATE=60
# API_CACHE_REVALIDATE: How long to cache API responses (default: 300 = 5 minutes)
API_CACHE_REVALIDATE=300
# CDN_MAX_AGE: CDN cache duration (default: 300 = 5 minutes)
CDN_MAX_AGE=300
# CDN_STALE_WHILE_REVALIDATE: Serve stale content while revalidating (default: 600 = 10 minutes)
CDN_STALE_WHILE_REVALIDATE=600

# Feature Flags
ENABLE_MOCK_FALLBACK=false

DOCKER_IMAGE=ghcr.io/salahfarzin/rawej:latest